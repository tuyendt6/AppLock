<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:background="@color/actionbar_background_color"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/logo1_01" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="@string/about_team" />

        <Button
            android:id="@+id/about_bt_vote"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"            
            android:layout_below="@+id/RelativeLayout1"            
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_button"
            android:text="@string/about_bt_vote" />

        <Button
            android:id="@+id/about_bt_localization"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/about_bt_vote"
            android:layout_below="@+id/about_bt_vote"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_button"
            android:text="@string/about_bt_localize" />

    </RelativeLayout>

</LinearLayout>