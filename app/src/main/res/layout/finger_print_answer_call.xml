<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/identify_dialog_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txtFinger"
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:background="@color/title"
        android:gravity="center"
        android:text="@string/txt_finger_answer_tip"
        android:textColor="@color/list_item_title"
        android:textSize="20dp" />

    <RelativeLayout
        android:id="@+id/callui_fingerprint_animation_box"
        android:layout_width="match_parent"
        android:layout_below="@+id/txtFinger"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/list_background" >

        <TextView
            android:id="@+id/callui_fingerprint_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/identify_dialog_info_image"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:maxLines="5"
            android:textColor="@color/title"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/callui_fingerprint_status_image"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/callui_fingerprint_status_text"
            android:layout_marginTop="30dp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/passicon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_finger" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-80dp"
        android:background="@drawable/bg_circle_item" >
    </LinearLayout>

    <ImageView
        android:id="@+id/callui_fingerprint_animation_image"
        android:layout_width="89dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>